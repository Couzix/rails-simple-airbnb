<div class="container mt-3">
  <div class="row ml-1">
    <h2>All our flats</h2>
  </div>
    <p class="ml-1">All <%= Flat.count %> flats</p>
      <div class="row d-flex justify-content-evenly">
      <% @flats.each do |flat| %>
        <div class="col-lg-4 col-sm-3 col-md-5 mb-3">
          <div class="flat-card rounded shadow">
            <img src="https://loremflickr.com/320/240/city" class="card-img-top" alt="...">
            <div class="flat-card-content" style="height: auto">
              <div class="flat-card-title mb-3 mt-2">
                <h4><%= flat.name %></h4>
              </div>
              <div class="flat-card-description d-flex justify-content-between align-items-baseline">
                <p><%= flat.description %></p>
              </div>
            </div>
              <div class="card-end d-flex mb-3">
                <div class="flex ml-3">
                  <i class="fas fa-user-friends"></i><span class="ml-1"><%= flat.number_of_guests %></span>
                </div>
                <div class="flex ml-3">
                  <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
                </div>
              </div>
              <div class="d-flex card-footer">
                <div class="mr-3">
                  <%= link_to 'More info', flat_path(flat) %>
                </div>
                <div class="mr-3">
                  <%= link_to 'Edit', flat_path(flat) %>
                </div>
                <div>
                  <%= link_to 'Remove', flat_path(flat) %>
                </div>
              </div>
          </div>
        </div>
    <% end %>
    </div>
  </div>
</div>
