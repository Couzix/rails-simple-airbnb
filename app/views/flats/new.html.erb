<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h1>Add a new flat</h1>
        <div class="mt-3">
          <%= simple_form_for(@flat) do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :number_of_guests %>
            <%= f.input :price_per_night %>
            <%= f.submit "Add", class:"btn btn-primary rounded" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
